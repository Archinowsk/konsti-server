{
  "name": "konsti-server",
  "version": "0.0.1",
  "private": true,
  "main": "server.js",
  "description": "Konsti signup tool server",
  "author": {
    "name": "Arttu Hanska"
  },
  "engines": {
    "node": ">=8.x.x"
  },
  "scripts": {
    "build": "rimraf lib && babel src -d lib",
    "build-front-prod": "cd ../konsti-client && npm run build",
    "build-front-staging": "cd ../konsti-client && npm run build-staging",
    "copy-front": "rimraf front && ncp ../konsti-client/build ./front",
    "deploy-prod": "npm run prepare-deploy-prod && eb deploy Konsti-env",
    "deploy-staging": "npm run prepare-deploy-staging && eb deploy konsti-staging-env",
    "docker-start": "docker-compose -f docker-compose.yml up --build",
    "eslint": "eslint src",
    "list-rules": "eslint-index .eslintrc.js",
    "table-rules": "eslint-index .eslintrc.js --format table",
    "flow": "flow check",
    "flow-typed-install": "rimraf flow-typed && flow-typed install --skip --ignoreDeps peer bundle",
    "generate-data": "npm run build && cross-env NODE_ENV=development node -r esm lib/test/data-generation/runGenerators.js",
    "generate-serials": "npm run build && cross-env NODE_ENV=development node -r esm lib/utils/generateSerials.js",
    "prepare-deploy-prod": "npm run build-front-prod && npm run copy-front && npm run build",
    "prepare-deploy-staging": "npm run build-front-staging && npm run copy-front && npm run build",
    "prettier": "prettier --write \"src/**/*.{js,json}\"",
    "start": "npm run build && node -r esm lib/server.js",
    "start-dev": "npm run build && cross-env NODE_ENV=development node -r esm lib/server.js",
    "start-prod": "npm run build && cross-env NODE_ENV=production node -r esm lib/server.js",
    "stats:games": "node -r esm src/statistics/getGameStats.js",
    "stats:results": "node -r esm src/statistics/getResultsStats.js",
    "stats:users": "node -r esm src/statistics/getUserStats.js",
    "stats:fix": "node -r esm src/statistics/dataFixer.js",
    "stats:anonymize": "node -r esm src/statistics/dataAnonymizer.js",
    "test": "mocha --reporter spec --compilers js:@babel/register",
    "test-assign": "npm run build && cross-env NODE_ENV=development node -r esm lib/test/testAssignPlayers.js"
  },
  "dependencies": {
    "@babel/cli": "7.2.3",
    "@babel/core": "7.3.4",
    "@babel/node": "7.2.2",
    "@babel/preset-flow": "^7.0.0",
    "@babel/preset-env": "7.3.4",
    "babel-plugin-module-resolver": "3.2.0",
    "bcryptjs": "2.4.3",
    "body-parser": "1.18.3",
    "esm": "3.2.10",
    "express": "4.16.4",
    "express-jwt": "5.3.1",
    "generate-serial-number": "0.0.3",
    "helmet": "3.15.1",
    "jsonwebtoken": "8.5.0",
    "lodash": "4.17.11",
    "moment": "2.24.0",
    "mongoose": "5.4.17",
    "morgan": "1.9.1",
    "munkres-js": "1.2.2",
    "node-schedule": "1.3.2",
    "request": "2.88.0",
    "request-promise-native": "1.0.7",
    "rimraf": "2.6.3",
    "winston": "3.2.1",
    "winston-daily-rotate-file": "3.8.0"
  },
  "devDependencies": {
    "babel-eslint": "10.0.1",
    "cross-env": "5.2.0",
    "eslint": "5.15.0",
    "eslint-config-prettier": "4.1.0",
    "eslint-config-standard": "12.0.0",
    "eslint-index": "1.5.0",
    "eslint-plugin-eslint-comments": "3.1.1",
    "eslint-plugin-eslint-plugin": "2.0.1",
    "eslint-plugin-flowtype": "3.4.2",
    "eslint-plugin-flowtype-errors": "4.0.0",
    "eslint-plugin-import": "2.16.0",
    "eslint-plugin-node": "8.0.1",
    "eslint-plugin-prettier": "3.0.1",
    "eslint-plugin-promise": "4.0.1",
    "eslint-plugin-security": "1.4.0",
    "eslint-plugin-standard": "4.0.0",
    "eslint-plugin-unicorn": "7.1.0",
    "faker": "4.1.0",
    "flow-bin": "0.94.0",
    "flow-typed": "2.5.1",
    "husky": "1.3.1",
    "lint-staged": "8.1.5",
    "ncp": "2.0.0",
    "prettier": "1.16.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --parser flow --write",
      "git add"
    ],
    "*.json": [
      "prettier --parser json --write",
      "git add"
    ]
  }
}
